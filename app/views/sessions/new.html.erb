<div class="w-full max-w-sm mx-auto">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mt-6 sm:mt-12">
    <h2 class="mb-5 text-gray-900 text-2xl">Entrar</h2>

    <%= form_with url: sign_in_path do |form| %>
      <div class="mb-4">
        <%= form.label :cpf, "CPF", class: "block text-gray-700 text-sm font-bold mb-2"%>
        <%= form.text_field :cpf, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= form.label :password, "Senha", class: "block text-gray-700 text-sm font-bold mb-2"%>
        <%= form.password_field :password, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex items-center">
        <%= form.submit "Entrar", class: "mt-3 bg-zinc-700 hover:bg-zinc-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full cursor-pointer" %>
      </div>
    <% end %>
    <div class='mt-6'>
    <%= link_to '/sign_up' do%>
      <span>NÃ£o tem uma conta? </span>
      <span class='text-blue-500'><%= "Cadastre-se"%> </span>
    <% end %>
  </div>
</div>